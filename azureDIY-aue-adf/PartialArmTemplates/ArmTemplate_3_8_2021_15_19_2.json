{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "azureDIY-aue-adf"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/OData')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy OData",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "ODataSource",
								"httpRequestTimeout": "00:05:00"
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "ODataResource",
								"type": "DatasetReference",
								"parameters": {
									"ODataPath": {
										"value": "@pipeline().parameters.ODataPath",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "RawZoneDataSet",
								"type": "DatasetReference",
								"parameters": {
									"zone": "raw",
									"sourceName": {
										"value": "@pipeline().parameters.SinkPath",
										"type": "Expression"
									},
									"fileName": {
										"value": "@pipeline().parameters.SinkName",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"ODataPath": {
						"type": "string"
					},
					"SinkName": {
						"type": "string"
					},
					"SinkPath": {
						"type": "string"
					}
				},
				"folder": {
					"name": "Utilities"
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/ODataResource')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ODataResource')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "OData",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"ODataPath": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "ODataResource",
				"schema": [],
				"typeProperties": {
					"path": {
						"value": "@dataset().ODataPath",
						"type": "Expression"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/OData')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/OData')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "OData",
				"typeProperties": {
					"url": "https://ghoapi.azureedge.net/api",
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		}
	]
}